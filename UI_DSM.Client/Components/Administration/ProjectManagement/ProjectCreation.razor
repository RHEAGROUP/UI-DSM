@attribute [Authorize(Roles = "Administrator")]
<EditForm Context="editFormContext" Model="@this.ViewModel.Project" OnValidSubmit="@this.ViewModel.OnValidSubmit">
	<DataAnnotationsValidator />
	<DxFormLayout>
		<DxFormLayoutItem Caption="Project Name:" ColSpanMd="12">
			<DxTextBox @bind-Text="@this.ViewModel.Project.ProjectName" NullText="Enter the name of the project"/>
		</DxFormLayoutItem>
	</DxFormLayout>
	<ValidationSummary/>
	<ErrorMessage />
	<div class="modal-footer m-top-10px">
		<DxButton RenderStyle="ButtonRenderStyle.Primary" Text="Create" SubmitFormOnClick="true"/>
	</div>
</EditForm>