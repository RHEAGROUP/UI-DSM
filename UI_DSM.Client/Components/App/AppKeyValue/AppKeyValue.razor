<div class="app-key-value @(this.componentVariant)">
	<span class="app-key-value__key">@(this.Key)</span>

	@if (this.OnItemDoubleClick.HasDelegate)
	{
		<button class="app-key-value__value" @ondblclick="() => this.OnDoubleClick(this.Value)">
				@(this.Value)
		</button>
	}
	else
	{
		<span class="app-key-value__value">
			@(this.Value)
		</span>
	}
</div>