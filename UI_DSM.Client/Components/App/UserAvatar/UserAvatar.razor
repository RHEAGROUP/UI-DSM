<Tooltip Text="@(this.UserName)">
	<figure class="user-avatar" aria-label="User avatar">
		@if (this.HasImage)
		{
			<img class="user-avatar__image" alt="User image" src="@(this.UserImage)"/>
		}
		else
		{
			<span class="user-avatar__initials">@(this.UserInitials)</span>
		}
	</figure>
</Tooltip>