@inherits GenericBaseView<UI_DSM.Client.ViewModels.Components.NormalUser.Views.IBudgetViewViewModel>

<LoadingComponent IsLoading="this.ViewModel is null">
    <div class="budget-view">
        <label class="budget-report-selector">
            <span>Select Report Definition:</span>
            <DxComboBox Data="@this.ViewModel.ReportNames"
                    @bind-Value="@this.ViewModel.ReportName"
                    CssClass="cw-480"/>
        </label>

        <DxWasmDocumentViewer ReportName="@this.ViewModel.ReportDtoAsString" Height="100%" Width="100%">
            <DxWasmDocumentViewerRequestOptions InvokeAction="DXXRDV" />
            <DxDocumentViewerCallbacks
                BeforeRender="ReportingViewerCustomization.onBeforeRender"
                PreviewClick="ReportingViewerCustomization.onPreviewClick"/>
        </DxWasmDocumentViewer>
    </div>
</LoadingComponent>

