@if (this.ProjectModels is not null && this.ProjectModels.Count > 0)
{
	<table class="table">
		<thead>
			<tr>
				<th scope="col">Model Name</th>
				<th scope="col">Id</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var model in this.ProjectModels)
			{
				<tr>
					<td class="align-middle">
						@model.ModelName
					</td>
					<td class="align-middle">
						@model.Id
					</td>
				</tr>
			}
		</tbody>
	</table>
}