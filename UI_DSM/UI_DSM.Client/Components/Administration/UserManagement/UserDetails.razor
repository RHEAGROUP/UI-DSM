<EditForm Context="editFormContext" Model="@this.ViewModel.User">
	<DxFormLayout>
		<DxFormLayoutItem Caption="User Id:" ColSpanMd="12">
			<Template>
				<InputText @bind-Value="@this.ViewModel.User.UserId" disabled="true" class="form-control"/>
			</Template>
		</DxFormLayoutItem>
		<DxFormLayoutItem Caption="UserName:" ColSpanMd="12">
			<Template>
				<InputText @bind-Value="@this.ViewModel.User.UserName" disabled="true" class="form-control"/>
			</Template>
		</DxFormLayoutItem>
		<DxFormLayoutItem Caption="Is Administrator:" ColSpanMd="12">
			<Template>
				<DxCheckBox @bind-Checked="@this.ViewModel.User.IsAdmin" Enabled="false"/>
			</Template>
		</DxFormLayoutItem>
	</DxFormLayout>
</EditForm>