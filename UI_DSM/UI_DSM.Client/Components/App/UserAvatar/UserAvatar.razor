@namespace AppComponents

<figure class="user-avatar"  aria-label="User avatar">
  @if (HasImage){
    <img class="user-avatar__image" src="@UserImage" />
  }
  else
  {
    <span class="user-avatar__initials">@UserInitials</span>
  }
</figure>

@code {
  [Parameter]
  public string? UserInitials { get; set; }

  [Parameter]
  public string? UserImage { get; set; }

  private bool HasImage => !String.IsNullOrEmpty(UserImage);
}
